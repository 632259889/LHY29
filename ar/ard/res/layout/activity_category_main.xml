<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
        <RelativeLayout style="@style/toolbar">
            <ImageView android:id="@id/img_back" style="@style/ImageBackToolbar" />
            <TextView android:text="@string/category" style="@style/textToolbar" />
        </RelativeLayout>
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
            <androidx.recyclerview.widget.RecyclerView android:id="@id/recycle_category" android:layout_width="fill_parent" android:layout_height="wrap_content" android:overScrollMode="never" />
        </RelativeLayout>
    </LinearLayout>
    <com.myads.googlead.GoogleNativeAdView android:id="@id/adView" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="6.0dip" android:layout_alignParentBottom="true" />
</LinearLayout>