<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1.5dip" android:color="@color/light_pink" />
            <solid android:color="#4c9364ff" />
            <corners android:radius="2.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1.5dip" android:color="@color/transparent" />
            <solid android:color="@color/transparent" />
            <corners android:radius="2.0dip" />
        </shape>
    </item>
</selector>