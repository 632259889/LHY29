<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/ripple_color"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <color android:color="@color/transparent" />
    </item>
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?android:colorAccent" />
        </shape>
    </item>
    <selector>
        <item android:state_focused="true" android:state_pressed="true" android:drawable="@drawable/dialoge_listitem_pressed" />
        <item android:state_focused="false" android:state_pressed="true" android:drawable="@drawable/dialoge_listitem_pressed" />
        <item android:state_selected="true" android:state_pressed="false" android:drawable="@color/color_listview_normal" />
        <item android:state_focused="true" android:state_pressed="false" android:drawable="@drawable/dialoge_listitem_pressed" />
        <item android:state_window_focused="false" android:state_pressed="false" android:drawable="@color/color_listview_normal" />
    </selector>
</ripple>