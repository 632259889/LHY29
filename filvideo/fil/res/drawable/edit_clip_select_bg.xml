<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <stroke android:width="@dimen/clip_stroke_size" android:color="@color/colorAccent" />
            <solid android:color="@color/base_color_alpha20" />
            <corners android:radius="0.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="@dimen/clip_stroke_size" android:color="@color/transparent" />
            <solid android:color="@color/transparent" />
            <corners android:radius="0.0dip" />
        </shape>
    </item>
</selector>